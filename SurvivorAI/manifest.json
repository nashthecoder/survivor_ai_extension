{
  "manifest_version": 3,
  "name": "Survivor Companion",
  "version": "1.0",
  "description": "A tool to generate takedown letters for survivors in-situ of online harm.",
  "permissions": ["contextMenus", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png", 
      "128": "icon128.png"
    }
  },
    "background": {
        "service_worker": "background.js"
    },
        "content_scripts": [
    {
        "matches": ["*://*.instagram.com/*"],
        "js": ["content.js"],
        "run-at": "document_idle"
    }
    ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}